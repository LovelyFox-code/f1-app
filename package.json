{
  "name": "formula-1",
  "version": "1.0.0",
  "description": "Formula 1 World Champions",
  "type": "module",
  "main": "index.js",
  "scripts": {
    "start": "node --loader ts-node/esm backend/index.ts",
    "dev": "NODE_ENV=development node --loader ts-node/esm backend/index.ts",
    "seed": "node --loader ts-node/esm backend/scripts/seed.ts",
    "lint": "npm run lint --prefix frontend && echo 'No backend linting configured'",
    "test": "npm run test:frontend && npm run test:backend",
    "test:frontend": "npm test --prefix frontend",
    "test:backend": "echo 'No backend tests configured'",
    "build": "npm run build:frontend && npm run build:backend",
    "build:frontend": "npm run build --prefix frontend",
    "build:backend": "tsc -p backend/tsconfig.json && npm run copy-backend-files",
    "copy-backend-files": "cp -r backend/package.json backend/dist/ && cp -r backend/.env* backend/dist/ 2>/dev/null || true"
  },
  "author": "Alina Dakhno",
  "license": "ISC",
  "dependencies": {
    "axios": "^1.9.0",
    "cors": "^2.8.5",
    "dotenv": "^16.5.0",
    "express": "^5.1.0",
    "helmet": "^8.1.0",
    "mongoose": "^8.14.3",
    "swagger-ui-express": "^5.0.1",
    "yamljs": "^0.3.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.18",
    "@types/express": "^5.0.1",
    "@types/mongoose": "^5.11.96",
    "@types/node": "^22.15.18",
    "@types/swagger-ui-express": "^4.1.8",
    "@types/yamljs": "^0.2.34",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.8.3"
  }
}
