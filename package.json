{
  "name": "formula-1",
  "version": "1.0.0",
  "description": "Formula 1 World Champions",
  "type": "module",
  "main": "index.js",
  "scripts": {
    "start": "node --loader ts-node/esm backend/index.ts",
    "dev": "NODE_ENV=development node --loader ts-node/esm backend/index.ts",
    "seed": "node --loader ts-node/esm backend/scripts/seed.ts",
    "lint": "npm run lint --prefix frontend && echo 'No backend linting configured'",
    "test": "npm run test:frontend && npm run test:backend",
    "test:frontend": "npm test --prefix frontend",
    "test:backend": "cd backend && jest --config jest.config.ts",
    "test:backend:watch": "cd backend && jest --config jest.config.ts --watch",
    "test:backend:coverage": "cd backend && jest --config jest.config.ts --coverage"
  },
  "author": "Alina Dakhno",
  "license": "ISC",
  "dependencies": {
    "axios": "^1.9.0",
    "cors": "^2.8.5",
    "dotenv": "^16.5.0",
    "express": "^5.1.0",
    "express-validator": "^7.2.1",
    "helmet": "^8.1.0",
    "mongoose": "^8.14.3",
    "p-limit": "^6.2.0",
    "supertest": "^7.1.1",
    "swagger-ui-express": "^5.0.1",
    "yamljs": "^0.3.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.18",
    "@types/express": "^5.0.1",
    "@types/jest": "^29.5.14",
    "@types/mongoose": "^5.11.96",
    "@types/node": "^22.15.18",
    "@types/p-limit": "^2.1.0",
    "@types/supertest": "^6.0.3",
    "@types/swagger-ui-express": "^4.1.8",
    "@types/yamljs": "^0.2.34",
    "@vitest/coverage-v8": "^3.1.4",
    "jest": "^29.7.0",
    "mongodb-memory-server": "^10.1.4",
    "ts-jest": "^29.3.4",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.8.3",
    "vitest": "^3.1.4"
  }
}
